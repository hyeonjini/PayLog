<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:paddingTop = "60dp"
    android:paddingBottom="60dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:layout_height="wrap_content">

    <!-- 그룹이름-->
    <LinearLayout
        android:padding="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="그룹 이름을 입력하세요"
            android:id="@+id/add_account_name"/>
    </LinearLayout>

    <!-- 그룹 내용-->
    <LinearLayout
        android:padding="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설명"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용을 입력하세요"
            android:id="@+id/add_account_subscribe"/>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예산"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예산을 입력하세요"
            android:inputType="number"
            android:id="@+id/add_account_budget"/>
    </LinearLayout>
    <!-- 예산 설정 -->
    <!-- 추가, 취소버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="추가"
            android:id="@+id/account_add_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="취소"
            android:id="@+id/account_add_cancel"/>
    </LinearLayout>
</LinearLayout>